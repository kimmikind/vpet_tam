<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_sent">
        <item name="android:textColor">#FFD5E1</item>
        <item name="android:fontFamily">"@font/press_start_2p"</item>
        <item name="android:shadowColor">@color/text_shadow_m</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">30sp</item>
        <item name="android:alertDialogTheme">@style/dialogAlertTheme</item>

    </style>

    <style name="stat_sent">
        <item name="android:textColor">#000001</item>
        <item name="android:fontFamily">"@font/press_start_2p"</item>
        <item name="android:shadowColor">@color/text_shadow_s</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="CustomPopUpStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">#000001</item>
        <item name="android:itemBackground">#70000000</item>
    </style>

    <style name="dialogAlertTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/customButtonStyle</item>
    </style>

    <style name="customButtonStyle">
        <item name="android:textColor">#000001</item>
        <item name="android:fontFamily">"@font/press_start_2p"</item>
        <item name="android:shadowColor">@color/text_shadow_s</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>